<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:background="@drawable/bg"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.32"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/Nutrition_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/background_nutrition"
                android:scaleType="fitXY"
                android:layout_marginBottom="32dp"
                />

            <ImageView
                android:id="@+id/logo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/nutrition1"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                />
            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:src="@drawable/back_arrow2"
                android:layout_toLeftOf="@id/logo"

                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/farword_btn"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:src="@drawable/fwd_arrow2"
                android:layout_toRightOf="@id/logo"

                android:layout_alignParentBottom="true"
                android:visibility="gone"
                />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.59"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/nutrition_Dark"
            android:text="current date"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#ffffff"
            android:visibility="gone"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/container_nutrition">
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.09"
        android:background="@color/character_light"

        >


        <ImageView
            android:id="@+id/ivdiet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/neutrition_1"
            android:layout_weight="1"
            android:background="@color/nutrition_Dark"
            android:padding="8dp"

            />


        <ImageView
            android:id="@+id/ivmenu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/neutrition_2"
            android:layout_weight="1"
            android:background="@color/nutrition_light"
            android:padding="7dp"
            />



        <ImageView
            android:id="@+id/ivcalory_counter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/neutrition_3"
            android:layout_weight="1"
            android:background="@color/nutrition_light"
            android:padding="7dp"
            />



        <ImageView
            android:id="@+id/ivmydiet"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/neutrition_4"
            android:layout_weight="1"
            android:background="@color/nutrition_light"
            android:padding="7dp"
            />

    </LinearLayout>
</LinearLayout>
