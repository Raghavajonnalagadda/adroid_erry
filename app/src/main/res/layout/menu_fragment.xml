
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#FFFFFF"
            >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"

    >
    <LinearLayout
        android:id="@+id/layout_refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >

        <ImageButton
            android:id="@+id/refresh_button"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/refresh_icon"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txt_more_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Refresh App Content"
            android:textColor="#000000"
            android:textSize="20dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:hint="V 1.0"
            android:textColor="#000000" />
    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_layout"
        android:layout_below="@+id/layout_refresh"
        android:layout_marginBottom="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"



            >
            <com.populace.berrycollege.activities.CircleShape
                android:id="@+id/ivuser_image"
                android:layout_width="88dp"
                android:layout_height="88dp"
                android:src="@drawable/add_signup_photo"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="7dp"
                android:paddingLeft="4dp"
                android:hint="First Name"
                android:textCursorDrawable="@drawable/black_cursor"
                android:textColor="#000000"
                android:background="@drawable/round_corner"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:ems="10"
                android:inputType="text"/>
            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="4dp"
                android:hint="Last Name"
                android:layout_marginEnd="10dp"
                android:inputType="none"
                android:textCursorDrawable="@drawable/black_cursor"
                android:textColor="#000000"
                android:background="@drawable/round_corner"
                android:layout_marginStart="10dp"
                android:ems="10"
                android:layout_marginBottom="20dp"/>
            <EditText
                android:id="@+id/e_mail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="4dp"
                android:hint="User mail id"
                android:textCursorDrawable="@drawable/black_cursor"
                android:textColor="#000000"
                android:background="@drawable/round_corner"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"

                />
            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:textCursorDrawable="@drawable/black_cursor"
                android:textColor="#000000"
                android:background="@drawable/round_corner"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:layout_marginBottom="10dp"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="4dp"
                android:hint="password"
                android:textCursorDrawable="@drawable/black_cursor"
                android:textColor="#000000"
                android:background="@drawable/round_corner"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ems="10"
                android:inputType="textPassword"/>
            <Button
                android:id="@+id/save"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Save"
                android:textColor="#ffffff"
                android:background="@android:color/holo_red_dark"
                />
            <Button
                android:id="@+id/logout"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/btn_logout"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:text="Logout"
                android:textColor="#ffffff"
                android:background="@android:color/holo_red_dark"
                />
            <TextView
                android:id="@+id/drawer_health_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Health and Wellness Center"
                android:textColor="@color/colorPrimary"
                android:textSize="17dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        >

        <ImageView
            android:id="@+id/ivfacebook"
            android:layout_width="28dp"
            android:layout_height="55dp"
            android:src="@drawable/facebook"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/ivtwitter"
            android:layout_width="28dp"
            android:layout_height="55dp"
            android:src="@drawable/twitter"
            android:scaleType="fitCenter"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivyoutube"
            android:layout_width="28dp"
            android:layout_height="55dp"
            android:src="@drawable/youtube"
            android:layout_gravity="bottom"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivpinterest"
            android:layout_width="28dp"
            android:layout_height="55dp"
            android:src="@drawable/pinterest"

            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/ivinstagram"
            android:layout_width="28dp"
            android:layout_height="52dp"
            android:src="@drawable/instagram"
            android:layout_weight="1"/>


    </LinearLayout>

</RelativeLayout>

</FrameLayout>
