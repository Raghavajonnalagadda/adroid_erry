<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9">

        <FrameLayout
            android:id="@+id/container_fragment_resourcesdetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="#ffffff"
        android:padding="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOnCampusResoureces"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/emotionalbuttonstates"
                android:gravity="center"
                android:text="Online Resources"
                android:textAllCaps="false"
                android:textColor="@drawable/emotionaltextcolors" />

            <Button
                android:id="@+id/btnPeerEducators"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:background="@drawable/emotionalbuttonstates"
                android:gravity="center"
                android:text="Peer Educators"
                android:textAllCaps="false"
                android:textColor="@drawable/emotionaltextcolors" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

