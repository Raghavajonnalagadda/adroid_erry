<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- The main content view (Here is your default mainactivity layout)-->

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >



<ScrollView
android:id="@+id/scrollView1"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/btnHeader"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@null"
        android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:paddingLeft="1dp"
        android:paddingRight="1dp"
        android:scaleType="fitXY"
        android:layout_weight="1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
        <ImageView
            android:id="@+id/nutrition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="sessionsClicked"
            android:src="@drawable/nutrition_icon"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />


        <ImageView
            android:id="@+id/Physical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="myAgendaClicked"
            android:src="@drawable/physical_icon"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"

        >
        <ImageButton android:id="@+id/emotional"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:onClick="sponsorsClicked"
                     android:src="@drawable/emotional_icon"
                     android:layout_margin="1dp"
                     android:layout_weight="1"
                     android:adjustViewBounds="true"
                     android:scaleType="fitXY"
            />

        <ImageView
            android:id="@+id/acadmic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="rollCallClicked"
            android:layout_weight="1"
            android:src="@drawable/academic_icon"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        >


        <ImageView  android:id="@+id/Sprituality"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@null"
                     android:onClick="informationClicked"
                     android:src="@drawable/spirituality_icon"
                     android:layout_margin="1dp"
                     android:layout_weight="1"
                     android:adjustViewBounds="true"
                     android:scaleType="fitXY"
            />
        <ImageView
            android:id="@+id/characters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:onClick="mapsClicked"
            android:layout_weight="1"
            android:src="@drawable/character_icon"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"

            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_weight="1"
        android:visibility="visible"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/Social"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/social_icon"
            android:layout_margin="1dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            />


    </LinearLayout>

</LinearLayout>
</ScrollView>
</LinearLayout>
</LinearLayout>
    <fragment
        class="com.populace.berrycollege.fragments.MenuFragement"
        android:id="@+id/myfragment"
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</android.support.v4.widget.DrawerLayout>